
@{
    ViewData["Title"] = "Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="text-dark font-weight-bold"><i class="fas fa-tools nav-icon"></i> Administration</h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Administration</a></li>
          <li class="breadcrumb-item active">Version 1.0</li>
        </ol>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
  <div class="container-fluid">

    <div class="row">
      <div class="col-md-6">
        <div class="card card-dark card-outline">
          <div class="card-header">
            <h5 class="card-title font-weight-bold">Actions</h5>
          </div><!-- /.card-header -->
          <div class="card-body p-0 bg-light">
            <ul class="nav flex-column">
              <li class="nav-item">
                <span class="nav-link text-dark">
                  Export blog data
                  <a class="btn btn-dark btn-xs float-right" asp-controller="Admin" asp-action="ExportBlogData">GO</a>
                </span>
              </li>
              <li class="nav-item">
                <span class="nav-link text-dark">
                  Import blog data
                  <a class="btn btn-dark btn-xs float-right" href="#" onclick="showUploadForm()">GO</a>
                </span>
              </li>
              <li class="nav-item">
                <span class="nav-link text-dark">
                  Delete unused images
                  <a class="btn btn-dark btn-xs float-right" data-ajax="true" data-ajax-method="get" data-ajax-begin="begin" data-ajax-update="#result" data-ajax-complete="completed" asp-controller="Admin" asp-action="DeleteUnusedImages">GO</a>
                </span>
              </li>
              <li class="nav-item">
                <span class="nav-link text-dark">
                  Manage users & roles
                  <a class="btn btn-dark btn-xs float-right" asp-controller="Admin" asp-action="ManageUsersAndRoles">GO</a>
                </span>
              </li>
            </ul>            
          </div>
          <div class="card-footer p-0">
          </div>
        </div>
        <!-- /.widget-user -->
      </div>
      <!-- /.col -->
      <div class="col-md-3">

      </div>
      <!-- /.col -->
      <div class="col-md-3">

      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-6">
        <div class="card card-dark card-outline" id="upload-card">
          <div class="card-header">
            <h5 class="card-title font-weight-bold">Upload</h5>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
              </button>
            </div><!-- /.card-tools -->
          </div><!-- /.card-header -->
          <div class="card-body">
            <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="ImportBlogData" data-ajax="true" data-ajax-method="post" data-ajax-begin="begin" data-ajax-update="#result" data-ajax-success="success" data-ajax-failure="failed" data-ajax-complete="completed">
              <div class="form-group">
                <input type="file" name="file" />
              </div>
              <div class="form-group">
                <a href="#" class="btn btn-dark btn-sm float-right ml-2" id="reset">Reset</a>
                <input type="submit" class="btn btn-dark btn-sm float-right" value="Upload" />
              </div>
            </form>
          </div><!-- /.card-body -->
        </div><!-- /.card -->
      </div>
      <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->

    <div class="row">
      <div class="col-lg-6">
        <div class="card card-dark card-outline"  id="result-card">
          <div class="card-header">
            <h5 class="card-title font-weight-bold">Result</h5>
            <div class="card-tools">
              <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
              </button>
            </div><!-- /.card-tools -->
          </div><!-- /.card-header -->
          <div class="card-body">
            <p class="card-text" id="result">  
            </p>
            <a href="#" class="btn btn-dark btn-sm float-right ml-2" id="clear">Clear</a>
            <a href="#" class="btn btn-dark btn-sm float-right" id="copy">Copy</a>
          </div>
        </div><!-- /.card -->
      </div>
      <!-- /.col-md-6 -->
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.main-content -->





@section Scripts {
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>
    <script>
        
        (function () 
        {
          $('#result-card').hide();
          $('#upload-card').hide();
        })();
        
        showUploadForm = function ()
        {
          $('#upload-card').show();
          return false;
        }

        begin = function (xhr) 
        {
          $('#result').empty();
        };

        completed = function (xhr) 
        {
          $('#result-card').show();
        };

        success = function (xhr) 
        {
          console.log(xhr);
        };

        failed = function (xhr) 
        {
          $('#result').html(xhr.responseText);
          console.log(xhr);
        };

        copyToClipboard = function (element) 
        {
          var $temp = $("<input>");
          $("body").append($temp);
          $temp.val($(element).text()).select();
          document.execCommand("copy");
          $temp.remove();
        }

        $('#reset').on('click', function() 
        {
          document.getElementsByName("file")[0].value = "";
        });

        $('#clear').on('click', function() 
        {
          $('#result').empty();
        });

        $('#copy').on('click', function() 
        {
          var elm = $('#result');
          copyToClipboard(elm);
          $('#copy').text('Copied');
          window.setTimeout(function() { 
            $('#copy').text('Copy'); 
          }, 3000);
        });

    </script>
}