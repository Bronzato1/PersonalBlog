@model List<PersonalBlog.Models.CustomUser>

@section head
{
    <STYLE type="text/css">

        .pre-line
        {
            white-space: pre-line;
        }
        .pre-line:first-line 
        {
            line-height: 0px;
        }

    </STYLE>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
    <div class="card-body pb-0">
        <div class="row d-flex align-items-stretch">
            @foreach (var user in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card w-100" card-color-for-role="@user">
                    <div class="card-header text-muted border-bottom-0">
                        <span denomination-for-role="@user"></span>
                    </div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-7">
                                <h2 class="lead"><b>@user.FirstName @user.LastName</b></h2>
                                <p class="text-muted text-sm">@user.Expertise</p>
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                    <li class="small">
                                        <span class="fa-li">
                                            <i class="fas fa-lg fa-check-circle"></i>
                                        </span> 
                                        <p class="pre-line">
                                            @user.Status
                                        </p>
                                    </li>
                                    <li class="small">
                                        <span class="fa-li">
                                            <i class="fas fa-lg fa-map-marker-alt"></i>
                                        </span> 
                                        <p class="pre-line">
                                            @user.Location
                                        </p>
                                    </li>
                                    <li class="small">
                                        <span class="fa-li">
                                            <i class="fas fa-lg fa-phone"></i>
                                        </span>
                                        Phone #: @user.PhoneNumber
                                    </li>
                                    </ul>
                            </div>
                            <div class="col-5 text-center">
                                <img gravatar-for="@user" alt="" class="img-circle img-fluid elevation-2" />
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="text-right">
                        <a href="#" class="btn btn-sm bg-teal">
                            <i class="fas fa-comments"></i>
                        </a>
                        <a asp-controller="users" asp-action="profile" asp-route-fullName="@user.FirstName@user.LastName" class="btn btn-sm btn-primary">
                            <i class="fas fa-user"></i> View Profile
                        </a>
                        </div>
                    </div>
                    </div>
                </div>                
            }
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <nav aria-label="Contacts Page Navigation">
        <ul class="pagination justify-content-center m-0">
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">6</a></li>
            <li class="page-item"><a class="page-link" href="#">7</a></li>
            <li class="page-item"><a class="page-link" href="#">8</a></li>
        </ul>
        </nav>
    </div>
    <!-- /.card-footer -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->