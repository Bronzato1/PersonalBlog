@using Microsoft.AspNetCore.Identity
@using PersonalBlog.Models;
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var fullName = user.FirstName + " " + user.LastName;
    var listRoles = await UserManager.GetRolesAsync(user);
    var roles = string.Join(",", listRoles);

    <li class="nav-item dropdown user-menu">
        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
            <img src="~/img/user-photo-grayscale.jpg" class="user-image img-circle elevation-2" alt="User Image">
            <span class="d-none d-md-inline">@fullName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
            <!-- User image -->
            <li class="user-header bg-primary">
                <img src="~/img/user-photo-duo-tone.jpg" class="img-circle elevation-2" alt="User Image">

                <p>
                    @fullName
                    <small>@roles</small>
                </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
                <div class="row">
                    <div class="col-4 text-center">
                        <a href="#">Followers</a>
                    </div>
                    <div class="col-4 text-center">
                        <a href="#">Sales</a>
                    </div>
                    <div class="col-4 text-center">
                        <a href="#">Friends</a>
                    </div>
                </div>
                <!-- /.row -->
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-default btn-flat">Profile</a>
                <form class="form-inline float-right" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Dashboard", new { area = "" })">
                    <button type="submit" class="btn btn-default btn-flat">Logout</button>
                </form>
            </li>
        </ul>
    </li>

}
else
{
    <li class="nav-item d-none d-sm-inline-block">
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register" title="Register">
            <i class="fas fa-user-plus"></i>
        </a>
    </li>
    <li class="nav-item d-none d-sm-inline-block">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login" title="Login">
            <i class="fas fa-sign-in-alt"></i>
        </a>
    </li>
}

