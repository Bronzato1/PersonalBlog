@using static PersonalBlog.Secret;
@using Microsoft.AspNetCore.Identity
@using PersonalBlog.Models;
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    bool userIsAdmin = (user != null) &&  await UserManager.IsInRoleAsync(user, "Admin");   
}

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/user-photo-duo-tone.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@Secret.FullName</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                <li class="nav-item has-treeview menu-open">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Starter Pages
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Doctors" asp-action="Index" class="nav-link" is-active-route>
                                <i class="far fa-circle nav-icon"></i>
                                <p>Doctors</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Resume" asp-action="About" class="nav-link" is-active-route>
                                <i class="far fa-circle nav-icon"></i>
                                <p>About</p>
                            </a>
                        </li>
                    </ul>
                </li>

                @if (userIsAdmin)
                {
                    <li class="nav-item">
                        <a asp-controller="Resume"
                           asp-action="Index"
                           class="nav-link" is-active-route>
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Manage Resume
                                <span class="right badge badge-danger">Admin</span>
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Blog"
                           asp-action="Index"
                           class="nav-link" is-active-route>
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Manage Blog
                                <span class="right badge badge-danger">Admin</span>
                            </p>
                        </a>
                    </li>
                }

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
