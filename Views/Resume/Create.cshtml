@model PersonalBlog.ViewModels.CreateResumeViewModel

@section head {
  <STYLE type="text/css">
    /* Any css you want to add */
  </STYLE>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
        <h1>Resume add</h1>
        </div>
        <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Resume" asp-action="Index">Resume</a></li>
            <li class="breadcrumb-item active">Resume add</li>
        </ol>
        </div>
    </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">General</h3>
            </div>
            <div class="card-body">
                <form class="form-horizontal" asp-controller="Resume" asp-action="CreateResume" method="post">

                    <div class="form-group">
                        <label asp-for="Resume.Title">Title</label>
                        <input type="text" name="Resume.Title" class="form-control" asp-for="@Model.Resume.Title">
                    </div>

                    <div class="form-group">
                        <label asp-for="Resume.Description">Description</label>
                        <input type="text" name="Resume.Description" class="form-control" asp-for="@Model.Resume.Description">
                    </div>

                    <div class="form-group">
                        <label asp-for="Resume.Sector">Sector</label>
                        <select name="Resume.Sector" class="form-control custom-select" asp-for="@Model.Resume.Sector">
                            <option selected disabled>Select one</option>
                            <option value="0">Banking</option>
                            <option value="1">Industry</option>
                            <option value="2">Food & beverage</option>
                            <option value="3">Pharmaceutical</option>
                            <option value="4">Art & sport</option>
                            <option value="5">Consultancy</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Resume.CompanyId">Company</label>
                        <select name="Resume.CompanyId" class="form-control custom-select" asp-for="Resume.CompanyId" asp-items="@Model.Companies">
                            <option>Please select one</option>
                        </select>    
                    </div>

                    <div class="form-group">
                        <label asp-for="Resume.DatabaseId">Sector</label>
                        <select name="Resume.DatabaseId" class="form-control custom-select" asp-for="Resume.DatabaseId" asp-items="@Model.Databases">
                            <option>Please select one</option>
                        </select>    
                    </div>
                    
                    <div>
                        <a class="btn btn-secondary" asp-controller="Resume" asp-action="Index">Cancel</a>
                        <input type="submit" value="Create new resume" class="btn btn-success float-right">
                    </div>

                </form>
            </div>
            <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->

