@model PersonalBlog.ViewModels.CreateExperienceViewModel

@section head {
    <STYLE type="text/css">
        /* Any css you want to add */
    </STYLE>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Experience add</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Experience" asp-action="Index">Experience</a></li>
                    <li class="breadcrumb-item active">Experience add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">General</h3>
                </div>
                <div class="card-body">
                    <form class="form-horizontal" asp-controller="Experience" asp-action="CreateExperience" method="post">

                        <div class="form-group">
                            <label asp-for="Experience.Date">Date</label>
                            <input type="text" name="Experience.Date" class="form-control" asp-for="Experience.Date" data-mask>
                        </div>

                        <div class="form-group">
                            <label asp-for="Experience.Title">Title</label>
                            <input type="text" name="Experience.Title" class="form-control" asp-for="@Model.Experience.Title">
                        </div>

                        <div class="form-group">
                            <label asp-for="Experience.Description">Description</label>
                            <textarea name="Experience.Description" class="form-control" asp-for="@Model.Experience.Description" rows="4">
                            </textarea>
                        </div>

                        <div class="form-group">
                            <label asp-for="Experience.Sector">Sector</label>
                            <select name="Experience.Sector" class="form-control custom-select" asp-for="@Model.Experience.Sector">
                                <option selected disabled>Select one</option>
                                <option value="0">Banking</option>
                                <option value="1">Industry</option>
                                <option value="2">Food & beverage</option>
                                <option value="3">Pharmaceutical</option>
                                <option value="4">Art & sport</option>
                                <option value="5">Consultancy</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Experience.CompanyId">Company</label>
                            <select name="Experience.CompanyId" class="form-control custom-select" asp-for="Experience.CompanyId" asp-items="@Model.Companies">
                                <option>Please select one</option>
                            </select>
                        </div>

                        <div>
                            <a class="btn btn-secondary" asp-controller="Resume" asp-action="Index">Cancel</a>
                            <input type="submit" value="Create new experience" class="btn btn-success float-right">
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->

@section scripts {
    <script>
        $(function () {
            // https://github.com/RobinHerbots/Inputmask
            $('[data-mask]').inputmask({ alias: "dd/mm/yyyy"});
        })
    </script>
}
