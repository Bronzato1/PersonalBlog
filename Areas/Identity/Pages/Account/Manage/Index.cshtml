@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form id="profile-form" method="post">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.Expertise"></label>
                <input asp-for="Input.Expertise" class="form-control" />
                <span asp-validation-for="Input.Expertise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Status"></label>
                <textarea asp-for="Input.Status" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Input.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Networking"></label>
                <textarea asp-for="Input.Networking" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Input.Networking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Location"></label>
                <textarea asp-for="Input.Location" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <textarea asp-for="Input.PhoneNumber" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Languages"></label>
                <textarea asp-for="Input.Languages" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Input.Languages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Note"></label>
                <textarea asp-for="Input.Note" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Input.Note" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}