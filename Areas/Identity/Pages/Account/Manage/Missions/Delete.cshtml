@page "{id?}"
@namespace PersonalBlog.Areas.Identity.Pages.Account.Manage.Missions
@using PersonalBlog.Models
@model DeleteModel
@{
    ViewData["Title"] = "Delete mission";
    ViewData["ActivePage"] = ManageNavPages.Missions;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Mission</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Input.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Input.Title)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Input.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Input.Description)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Input.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
